<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.seniordesign.smartlighthub.View.AddRoutine">

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Routine Name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintHorizontal_bias="0.497" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="279dp"
        android:layout_height="193dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:timePickerMode="spinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        app:layout_constraintHorizontal_bias="0.507" />

    <ToggleButton
        android:id="@+id/mondayToggle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="0dp"
        android:textOff="M"

        android:textOn="M"
        app:layout_constraintLeft_toRightOf="@+id/toggleButton3"
        app:layout_constraintBaseline_toBaselineOf="@+id/toggleButton3" />

    <ToggleButton
        android:id="@+id/tuesdayButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="0dp"
        android:textOff="T"
        android:textOn="T"
        app:layout_constraintBaseline_toBaselineOf="@+id/mondayToggle"
        app:layout_constraintLeft_toRightOf="@+id/mondayToggle" />

    <ToggleButton
        android:id="@+id/toggleButton3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="2dp"
        android:textOff="S"
        android:textOn="S"
        app:layout_constraintTop_toBottomOf="@+id/timePicker"
        android:layout_marginLeft="19dp"
        app:layout_constraintLeft_toLeftOf="@+id/timePicker" />

    <ToggleButton
        android:id="@+id/toggleButton4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:textOff="W"
        android:textOn="w"
        app:layout_constraintBaseline_toBaselineOf="@+id/tuesdayButton"
        app:layout_constraintLeft_toRightOf="@+id/tuesdayButton"
        android:layout_marginLeft="0dp" />

    <ToggleButton
        android:id="@+id/toggleButton5"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:textOff="T"
        android:textOn="T"
        app:layout_constraintLeft_toRightOf="@+id/toggleButton4"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/toggleButton4" />

    <ToggleButton
        android:id="@+id/toggleButton6"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:textOff="F"
        android:textOn="F"
        app:layout_constraintBaseline_toBaselineOf="@+id/toggleButton5"
        app:layout_constraintLeft_toRightOf="@+id/toggleButton5"
        android:layout_marginLeft="0dp" />

    <ToggleButton
        android:id="@+id/toggleButton7"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:textOff="S"
        android:textOn="S"
        app:layout_constraintBaseline_toBaselineOf="@+id/toggleButton6"
        app:layout_constraintLeft_toRightOf="@+id/toggleButton6"
        android:layout_marginLeft="0dp" />

</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.seniordesign.smartlighthub.View.LightInfo">



    <EditText
        android:id="@+id/lightName"
        android:layout_width="210dp"
        android:layout_weight="33"
        android:layout_height="60dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:text="Light #"
        android:clickable="true"


        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        tools:layout_editor_absoluteX="40dp" />

    <ImageView
        android:id="@+id/lightColor"
        android:layout_width="210dp"
        android:layout_height="144dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="65dp"
        android:layout_weight="33"
        android:background="@android:color/holo_blue_light"
        android:tint="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lightName" />

    <Switch
        android:id="@+id/lightState"
        android:layout_width="wrap_content"
        android:layout_weight="20"
        android:layout_height="wrap_content"
        android:gravity="center|end"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@+id/lightColor" />


    <Button
        android:id="@+id/updateButton"
        android:layout_width="210dp"
        android:layout_height="52dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="62dp"
        android:background="@android:color/holo_green_light"
        android:text="Update"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lightState" />

</android.support.constraint.ConstraintLayout>
